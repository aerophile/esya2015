<% Sponsor.category.values.each do |type| %>
  <% if @sponsors.where(category: type).count > 0 %>
    <section id="#{type}_sponsor" class="services bg-prime header" style="height: auto">
      <div class="container text-vertical-center">
        <div class="row text-center">
          <div class="col-lg-10 col-lg-offset-1">
            <h2 style="color:white"><%= type %></h2>
            <hr class="small">
            <div class="row">
              <% @sponsors.where(category: type).each do |sponsor| %>
                <div class="col-md-4 col-sm-4 col-xs-6">
                  <% if sponsor.url %>
                  <%= link_to sponsor.url do %>
                    <%= image_tag sponsor.image , class: "spons-mob-image" %>
                  <% end %>
                  <% else %>
                    <%= image_tag sponsor.image , class: "spons-mob-image" %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>
<% end %>
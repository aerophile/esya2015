<%= form_tag(register_event_create_path(@event.id,@event.short_code), :method=>'post', :class => "reg_form col-md-6 col-md-offset-3", :role => "form") do %>
 <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
 <h1>Registering for event <%=@event.name %></h1>
 <h2>Max team size: <%= @event.team_size %></h2>
 <% @event.team_size.times do |x| %>
   <div id="participant<%=x%>">
     <h3>Participant <%=x + 1%></h3>
     <div class="form-group">
       <%= text_field_tag "name#{x}",nil, :class => "form-control", :placeholder => "Name" %>
     </div>
     <div class="form-group">
       <%= text_field_tag "email#{x}",nil, :class => "form-control", :placeholder => "Subject" %>
     </div>
     <div class="form-group">
       <%= text_field_tag "phone#{x}",nil, :class => "form-control", :placeholder => "Phone" %>
     </div>
     <div class="form-group">
       <%= text_field_tag "college#{x}",nil, :class => "form-control", :placeholder => "College" %>
     </div>
   </div>
 <% end %>

 <div class="form-group">
   <%= submit_tag 'Submit' %>
 </div>
<% end %>

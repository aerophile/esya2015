<%= form_tag(form_create_path(@event.id), :method=>'post', :class => "reg_form col-md-6 col-md-offset-3", :role => "form") do %>
 <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
 <h1>Registering for <%=@event.name %></h1>
 <h2>Max team size: <%= @event.team_size %></h2>
 <% if @event.team_event? %>
  <div class="form-group">
     <%= text_field_tag "team_name",nil, :class => "form-control", :placeholder => "Team Name" %>
   </div>
 <% end %>
 <% @event.team_size.times do |x| %>
   <div id="participant<%=x%>">
     <h3>Participant <%=x + 1%></h3>
     <div class="form-group">
       <%= text_field_tag "name#{x}",nil, :class => "form-control", :placeholder => "Name", :required => x==0 %>
     </div>
     <div class="form-group">
       <%= email_field_tag "email#{x}",nil, :class => "form-control", :placeholder => "Email", :required => x==0  %>
     </div>
     <div class="form-group">
       <%= number_field_tag "phone#{x}",nil, :class => "form-control", :placeholder => "Phone", :required => x==0  %>
     </div>
     <div class="form-group">
       <%= text_field_tag "college#{x}",nil, :class => "form-control", :placeholder => "College", :required => x==0  %>
     </div>
   </div>
 <% end %>

 <div class="form-group">
   <%= submit_tag 'Submit', class: "btn btn-success" %>
 </div>
<% end %>
